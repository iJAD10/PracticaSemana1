@{
    ViewData["Title"] = "Bienvenido";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .welcome-container {
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://source.unsplash.com/1600x900/?technology,abstract') no-repeat center center;
        background-size: cover;
        height: 100vh;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .welcome-box {
        background-color: rgba(0, 0, 0, 0.5);
        padding: 3rem;
        border-radius: 20px;
        box-shadow: 0 0 15px rgba(0,0,0,0.7);
    }

        .welcome-box h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .welcome-box p {
            font-size: 1.3rem;
            margin-top: 1rem;
        }
</style>

<div class="welcome-container">
    <div class="welcome-box">
        <h1>¡Bienvenido al Sistema!</h1>
        <p>Has iniciado sesión correctamente.<br>Te damos la bienvenida y te deseamos un excelente día.</p>
    </div>
</div>
